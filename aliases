# Get External IP / Internet Speed
alias myip="curl https://ipinfo.io/json" # or /ip for plain-text ip
alias speedtest="curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python -"

# ML
alias llama="ollama run llama2"

# Quickly serve the current directory as HTTP
alias serve='ruby -run -e httpd . -p 8000' # Or python -m SimpleHTTPServer :)

# GitHub Copilot
alias ghe="gh copilot explain"
alias ghs="gh copilot suggest"

# Ruby
alias s="bundle exec rspec"
alias ffs="bundle exec rspec --fail-fast"
alias sm='bundle exec rspec $(git ls-files --modified --others spec)'
alias be="bundle exec"
alias hl="HEADLESS=true"

# Web Browser
alias chrome="open -a 'Google Chrome'"
alias firefox="open -a 'Firefox'"
alias safari="open -a 'Safari'"
alias brave="open -a 'Brave Browser'"
alias tor="open -a 'Tor Browser'"

alias vim='nvim'
alias v='nvim .'

alias py='python3'
alias python='python3'

alias gcs='git commit -S --verbose'

alias fame='open https://friendlyantz.me'

alias hmm='cat <<- EOF
¯\_(ツ)_/¯
EOF
'

alias tomatome='printf '🍅%.0s' {1..1000}; echo'

